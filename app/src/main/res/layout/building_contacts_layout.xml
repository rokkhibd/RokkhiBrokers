<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="240dp">


    <LinearLayout

        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/lin1"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/bpeople_desig_manager"
                android:textColor="@color/lightorange"
                android:textSize="15sp"
                android:text="Designation ->"
                android:layout_width="130dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/bpeople_name_manager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="@color/black"
                android:textSize="15sp"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin2"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:textColor="@color/lightorange"
                android:textSize="15sp"
                android:text="Phone Number ->"
                android:layout_width="130dp"
                android:layout_height="wrap_content"/>

            <TextView

                android:id="@+id/bpeople_phone_manager"
                android:layout_width="140dp"
                android:layout_height="wrap_content"

                android:textColor="@color/black"
                android:textSize="15sp"
                />

            <ImageView
                android:id="@+id/manager_call_img"
                android:src="@drawable/call_one"
                android:layout_width="20dp"
                android:layout_height="20dp"/>


        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/notdatatxt"
            android:textSize="15sp"
            android:textColor="@color/orange"
            android:layout_gravity="center"
            android:text="No Contacts Found for this Building"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:id="@+id/lin3"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/bpeople_desig_guard"
                android:textColor="@color/lightorange"
                android:textSize="15sp"
                android:text="Designation ->"
                android:layout_width="130dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/bpeople_name_guard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="@color/black"
                android:textSize="15sp"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin4"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:textColor="@color/lightorange"
                android:textSize="15sp"
                android:text="Phone Number ->"
                android:layout_width="130dp"
                android:layout_height="wrap_content"/>

            <TextView

                android:id="@+id/bpeople_phone_guard"
                android:layout_width="140dp"
                android:layout_height="wrap_content"

                android:textColor="@color/black"
                android:textSize="15sp"
                />

            <ImageView
                android:id="@+id/guard_call_img"
                android:src="@drawable/call_one"
                android:layout_width="20dp"
                android:layout_height="20dp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin5"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/bpeople_desig_owner"
                android:textColor="@color/lightorange"
                android:textSize="15sp"
                android:text="Designation ->"
                android:layout_width="130dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/bpeople_name_owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="@color/black"
                android:textSize="15sp"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin6"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:textColor="@color/lightorange"
                android:textSize="15sp"
                android:text="Phone Number ->"
                android:layout_width="130dp"
                android:layout_height="wrap_content"/>

            <TextView

                android:id="@+id/bpeople_phone_owner"
                android:layout_width="140dp"
                android:layout_height="wrap_content"

                android:textColor="@color/black"
                android:textSize="15sp"
                />

            <ImageView
                android:id="@+id/owner_call_img"
                android:src="@drawable/call_one"
                android:layout_width="20dp"
                android:layout_height="20dp"/>


        </LinearLayout>


        <ProgressBar

            android:id="@+id/progress"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>